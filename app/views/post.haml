%article.post
  %header
    %h2
      %a{href: post.url}= post[:title]

    %time{datetime: post[:created_at]}= post[:created_at].strftime '%B %d, %Y'
    .tags
      tags:
      %em= post.linked_tags

  = post.body_html

  - if admin?
    %section.admin-edit
      .edit
        %a{:href => "#{post.url}edit"} edit

- if Scanty.settings.disqus_shortname
  %section.discuss-thread
    :javascript
      (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = 'http://#{Scanty.settings.disqus_shortname}.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
      })();

    %noscript
      Please enable JavaScript to view the
      %a{href: "http://disqus.com/?ref_noscript"} comments powered by Disqus.
    %a.dsq-brlink{:href => "http://disqus.com"}
      blog comments powered by
      %span.logo-disqus Disqus
