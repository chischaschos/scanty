%article.post
  %header
    %h2
      %a{href: post.url}= post[:title]

    %time{datetime: post[:created_at]}= post[:created_at].strftime '%B %d, %Y'
    .tags
      tags:
      %em= post.linked_tags

  = post.body_html

  - if admin?
    %section.admin-edit
      .edit
        %a{:href => "#{post.url}edit"} edit
